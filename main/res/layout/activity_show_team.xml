<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ShowTeam">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_team"
        android:background="#3980B8"
        android:minHeight="?attr/actionBarSize"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/arrow_back"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:src="@drawable/arrow_back"/>
            <TextView
                android:id="@+id/team_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:textColor="@color/white"
                android:text="@string/team"
                android:textSize="16sp"/>
        </LinearLayout>

    </androidx.appcompat.widget.Toolbar>
    <androidx.cardview.widget.CardView
        xmlns:card_view="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:backgroundTint="#E4DDF1"
        android:layout_below="@id/toolbar_team"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="15dp"
        app:cardElevation="15dp"
        card_view:cardCornerRadius="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:orientation="vertical"
            android:weightSum="4"
            android:padding="15dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/border"
                android:backgroundTint="#C8BEDC"
                android:layout_weight="1"
                android:weightSum="2"
                android:layout_marginBottom="5dp"
                android:id="@+id/layout_team">
                <TextView
                    android:id="@+id/det_team"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Albañiles"
                    android:layout_marginLeft="15dp"
                    android:textStyle="bold"
                    android:layout_gravity="center_vertical"
                    android:textColor="#134A63"
                    android:padding="5dp"
                    android:layout_weight="1"
                    android:textSize="13sp"/>
                <TextView
                    android:id="@+id/det_team_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/nodata"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="15dp"
                    android:textColor="#134A63"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:textSize="13sp"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <Button
                    android:id="@+id/add_alb"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Editar albañiles">
                </Button>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:backgroundTint="#C8BEDC"
                android:layout_weight="1"
                android:weightSum="2"
                android:background="@drawable/border"
                android:layout_marginBottom="5dp">
                <TextView
                    android:id="@+id/det_primera"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Oficiales de primera"
                    android:textStyle="bold"
                    android:layout_marginLeft="15dp"
                    android:layout_gravity="center_vertical"
                    android:textColor="#134A63"
                    android:padding="5dp"
                    android:layout_weight="1"
                    android:textSize="13sp"/>
                <TextView
                    android:id="@+id/det_primera_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/nodata"
                    android:layout_gravity="center_vertical"
                    android:textColor="#134A63"
                    android:layout_weight="1"
                    android:layout_marginLeft="15dp"
                    android:padding="5dp"
                    android:textSize="13sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <Button
                    android:id="@+id/add_primera"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Editar oficiales 1ª">
                </Button>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:backgroundTint="#C8BEDC"
                android:layout_weight="1"
                android:weightSum="2"
                android:background="@drawable/border"
                android:layout_marginBottom="5dp">
                <TextView
                    android:id="@+id/det_segunda"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Oficiales de segunda"
                    android:textStyle="bold"
                    android:layout_marginLeft="15dp"
                    android:layout_gravity="center_vertical"
                    android:textColor="#134A63"
                    android:padding="5dp"
                    android:layout_weight="1"
                    android:textSize="13sp"/>
                <TextView
                    android:id="@+id/det_segunda_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/nodata"
                    android:layout_gravity="center_vertical"
                    android:textColor="#134A63"
                    android:layout_weight="1"
                    android:layout_marginLeft="15dp"
                    android:padding="5dp"
                    android:textSize="13sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <Button
                    android:id="@+id/add_segunda"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Editar oficiales 2ª">
                </Button>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:backgroundTint="#C8BEDC"
                android:layout_weight="1"
                android:weightSum="2"
                android:background="@drawable/border"
                android:layout_marginBottom="5dp">
                <TextView
                    android:id="@+id/det_peon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Peones"
                    android:textStyle="bold"
                    android:layout_marginLeft="15dp"
                    android:layout_gravity="center_vertical"
                    android:textColor="#134A63"
                    android:padding="5dp"
                    android:layout_weight="1"
                    android:textSize="13sp"/>
                <TextView
                    android:id="@+id/det_peon_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/nodata"
                    android:layout_gravity="center_vertical"
                    android:textColor="#134A63"
                    android:layout_weight="1"
                    android:layout_marginLeft="15dp"
                    android:padding="5dp"
                    android:textSize="13sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <Button
                    android:id="@+id/add_peones"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Editar peones">
                </Button>
            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>
</RelativeLayout>